body
	background-color backgroundDark
	color white
	font-family -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Oxygen', 'Ubuntu', 'Cantarell', 'Fira Sans', 'Droid Sans', 'Helvetica Neue', sans-serif
	margin 0
	padding 0
	user-select none
	-moz-osx-font-smoothing grayscale
	-webkit-font-smoothing antialiased

button
	background-color backgroundLight
	border-color backgroundDark
	border-radius 10px
	color white
	cursor pointer
	font-size 1.4em
	font-weight bold

input
	background-color backgroundLight
	border 0 none
	border-radius 5px
	color offWhite
	padding 5px
	
	&::placeholder
		color offWhite

h1,h2,h3,h4,h5,h6
	margin 0
	padding 0
	text-align center

hr
	width 90%

progress
	appearance none
	border none
	border-radius 10em
	background-color progressBackground
	-moz-appearance none
	-webkit-appearance none
	
	&::-moz-progress-bar
		border-radius 10em
		background-color progressBar
	
	&::-webkit-progress-bar
		border-radius 10em
		background-color progressBackground
	
	&::-webkit-progress-value
		border-radius 10em
		background-color progressBar
